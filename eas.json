{
  "cli": {
    "version": ">=6.0.0",
    "requireCommit": true,
    "appVersionSource": "expo-application"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {"buildType": "apk"}
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "ios": {"simulator": true, "buildConfiguration": "Release"},
      "android": {"buildType": "apk"}
    },
    "production": {
      "distribution": "store",
      "channel": "production",
      "ios": {"buildConfiguration": "Release"},
      "android": {"buildType": "app-bundle"} // ← ここを修正
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${ASC_APP_ID}",
        "appleTeamId": "${APPLE_TEAM_ID}"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "internal"
      }
    }
  }
  // ← update ブロックは削除
}
